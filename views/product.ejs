<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/public/product.css">
    <link rel="stylesheet" href="/public/styles.css">
</head>
<body>
    <!-- navbar -->
    <% if (loggedIn) { %>
        <%- include ('navbar_logged') %>
      <% } else { %>
        <%- include ('navbar') %>
      <% } %>

    <h1>EXPLORE OUR RANGE OF DEALS ADDED BY THE COMMUNITY</h1>
    <!-- filter menu -->
    <div class="filter-menu">
        <div class="filter-option">
            <label for="city-filter">City:</label>
            <select id="city-filter">
                <option value="">All</option>
                <option value="London">London</option>
                <option value="Windsor">Windsor</option>
                <option value="Dublin">Dublin</option>
                <option value="Belfast">Belfast</option>
                <option value="Drogheda">Drogheda</option>
                <option value="Banbridge">Banbridge</option>
            </select>
        </div>
        <div class="filter-option">
            <label for="saving-filter">Saving:</label>
            <select id="saving-filter">
                <option value="">All</option>
                <option value="0">0</option>
                <option value="10">10</option>
                <option value="15">15</option>
                <option value="20">20</option>
                <option value="25">25</option>
                <option value="40">40</option>
                <option value="50">50</option>
            </select>
        </div>
        <div class="filter-option">
            <label for="category-filter">Category:</label>
            <select id="category-filter">
                <option value="">All</option>
                <option value="Eating out">Eating out</option>
                <option value="Entertainment">Entertainment</option>
                <option value="Groceries">Groceries</option>
                <option value="Days Out">Days Out</option>
                <option value="Indoor Products">Indoor Products</option>
                <option value="Outdoor Products">Outdoor Products</option>
            </select>
        </div>
        <button class="filter-button" onclick="applyFilter()">Filter</button>
    </div>
    <!-- deals -->
    <% rowdata.forEach((deal) => { %>
        <div class="deal-container" data-deal-id="<%= deal.id %>">
          <div class="deal-image">
            <img src="<%= deal.image %>" alt="Product Image">
          </div>
          <div class="deal-info">
            <h2><%= deal.text %></h2>
            <p><%= deal.info %></p>
            <p>Price: Â£<%= deal.rrp %> <span class="saving">Save <%= deal.saving %>%</span></p>
            <p>Voucher Code: <%= deal.voucher %></p>
            <a href="<%= deal.url %>" target="_blank" class="get-deal-btn">GET DEAL* </a>
            <% if (loggedIn) { %>
                <button class="save-btn" onclick="saveDeal('<%= deal.id %>')">SAVE DEAL</button>
                <button class="like-btn" onclick="likeDeal('<%= deal.id %>')">
                    <i class="far fa-heart"></i>
                </button>
                <span class="like-count"> <%= deal.likes %> </span>
              <% } else { %>
                <a href="/login" class="d-log-save-btn">LOG IN TO SAVE DEAL</a>
              <% } %>
          </div>
        </div>
      <% }) %>
      
    <!-- js for filter options -->
    <script>
        function applyFilter() {
            const cityFilter = document.getElementById("city-filter").value;
            const savingFilter = document.getElementById("saving-filter").value;
            const categoryFilter = document.getElementById("category-filter").value;

            // Send filter criteria to the server and get the filtered deals
         fetch(`/filteredDeals?city=${cityFilter}&saving=${savingFilter}&category=${categoryFilter}`)
            .then((response) => response.json())
            .then((filteredDeals) => {
                // Hide all deals first
                const deals = document.getElementsByClassName("deal-container");
                for (const deal of deals) {
                    deal.style.display = "none";
                }

        // Show only the filtered deals
        for (const deal of filteredDeals) {
          const dealContainer = document.querySelector(`[data-deal-id="${deal.id}"]`);
          if (dealContainer) {
            dealContainer.style.display = "block";
          }
        }
      });
    }

    // Call applyFilter() initially to show all deals
    applyFilter();
    </script>

    <!-- js for like deal -->
    <script>
        function likeDeal(dealId) {
            $.post('/like_deal', { dealId: dealId }, function (data) {
                console.log('Deal liked!');
                // Update the like count on the front-end
                const likeCountElement = document.querySelector(`[data-deal-id="${dealId}"] .like-count`);
                const currentLikes = parseInt(likeCountElement.textContent);
                likeCountElement.textContent = currentLikes + 1;
            });
        }
    </script>

    <!-- js to save deal -->
    <script>
        function saveDeal(dealId) {
            const memberId = req.session.loggedin; 
            // Prepare the data to send in the POST request body
            const data = {
                memberid: memberId,
                dealid: dealId,
            };
            
            fetch('/api/save-deal', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(result => {
                // Handle the response if needed
                console.log('Deal saved successfully!', result);
            })
            .catch(error => {
                // Handle any errors that occurred during the request
                console.error('Error saving deal:', error.message);
            });
        }
    </script>


      <!-- footer -->
    <%- include ('footer') %>
</body>
</html>